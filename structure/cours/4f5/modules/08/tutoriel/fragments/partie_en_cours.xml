<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>


<HBox xmlns:fx="http://javafx.com/fxml"
    fx:controller="pong.frontal.vues.fragments.FragmentPartieEnCours" 
    styleClass="conteneur,fragment-rendez-vous">

    <Pane styleClass="grand-espace-horizontal"/>


    <HBox styleClass="conteneur,rendez-vous">

        <Label
            fx:id="labelNomPremierJoueur"
            styleClass="label-nom-joueur">
        </Label>

        <Pane minHeight="20"/>

        <Label
            text="Vs"
            styleClass="label-nom-joueur">
        </Label>

        <Pane minHeight="20"/>

        <Label
            fx:id="labelNomDeuxiemeJoueur"
            styleClass="label-nom-joueur">
        </Label>

        <Pane minHeight="20"/>

        <Button 
            fx:id="boutonOuvrirPartie" 
            text="%voirPartie"
            styleClass="gros-bouton">
        </Button>

    </HBox>

    <Pane styleClass="grand-espace-horizontal"/>

</HBox>
